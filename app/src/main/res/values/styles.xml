<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="weatherParameter">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="weatherType">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15dp</item>>
        <item name="android:textColor">#FFA9A9A9</item>
    </style>

    <style name="cityNameInList">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">20dp</item>>
    </style>

    <style name="historyDate">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15dp</item>>
        <item name="android:textColor">#FFA9A9A9</item>
    </style>

    <style name="addToHistoryButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">14sp</item>>
        <item name="android:background">#00BCD4</item>
    </style>


</resources>
